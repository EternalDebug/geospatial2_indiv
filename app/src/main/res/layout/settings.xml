<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Lab6V_Indiv"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Работа: Гурин Иван Сергеевич"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        tools:text="Настройки" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Отображать якоря в радиусе:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ETRadiusAnc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:text="50" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Удалять якоря в радиусе:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ETRadiusDel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:text="8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Альтернативный якорь:"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBoxIsTank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Моделька танка" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="Всегда есть кнопка DO:"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBoxCanAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Да?" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/setToMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="В меню"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/buttonApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Применить"
        android:textSize="20sp" />

</LinearLayout>